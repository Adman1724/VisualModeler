        var canvasId = 'c';

        canvas = new fabric.Canvas(canvasId, canvasOptions);
        canvas.backgroundColor = "#F2F2F2";
        var nieco = 'nieco';
        first = new ClassObject(0, 0, 200, DEFAULT_NAME, false, nieco, canvas);
        first.initObject();
        first.draw(canvas);
        var secound = new ClassObject(0, 0, 200, DEFAULT_NAME, false, nieco, canvas);
        secound.initObject();
        secound.draw(canvas);
        var three = new Actor(100, 100, 100, nieco);
        three.initObject();
        three.draw(canvas);
        var four = new UseCase(200, 200, 200, nieco);
        four.initObject();
        four.draw(canvas);
        canvasItems = [];
        canvasItems.push(first);
        canvasItems.push(secound);
        canvasItems.push(three);
        canvasItems.push(four);
        

        canvasAdd(canvasItems, canvas);
        document.getElementById('add').onclick = function () {
            canvas.clear();
